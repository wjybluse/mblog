<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <%= f.submit "Post", class: "button [tiny small large] round" %>
<% end %>
<div class="row">
	<% if @feed_items.any? %>
		<%=render @feed_items %>
	<% end %>
</div>